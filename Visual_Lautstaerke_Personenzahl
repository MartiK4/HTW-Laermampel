
% Personenzahl - 1. Channel ID von dem Daten zur Personenanzahl gelesen werden
% update je nach Lösungsansatz mit 2 Controllern
readChannelID1 = 1476009;
1fieldID1 = 2;
% löschen   
1fieldID2 = 1;

% 1. Channel Read API Key 
% Falls der Channel private ist, muss der read API Key zwischen '' eingesetz werden  
readAPIKey1 = 'SP0E5VY6DRO85RSH';


% Lautstärke - 2. Channel ID von dem Daten zur Lautstärke gelesen werden
readChannelID2 = 1476009;
lautstaerkeID = 1;

% 2. Channel Read API Key 
% Falls der Channel private ist, muss der read API Key zwischen '' eingesetz werden  
readAPIKey2 = 'SP0E5VY6DRO85RSH';

%% Lesen der Daten %%
% Lesen der Personenzahl
[data1, time1] = thingSpeakRead(readChannelID, 'Field', fieldID1, 'NumPoints', 45, 'ReadKey', readAPIKey1);

% Lesen der Lautstärke
[data2, time2] = thingSpeakRead(readChannelID, 'Field', fieldID2, 'NumPoints', 45, 'ReadKey', readAPIKey1);

% update mit 2 controllern
% Lesen der Lautstärke
[data2, time2] = thingSpeakRead(readChannelID2, 'Field', lautstaerkeID, 'NumPoints', 45, 'ReadKey', readAPIKey2);

%% Visualisierung der Daten %%
xlabel('Uhrzeit');

yyaxis left;
plot(time1, data1)
ylabel('Personenzahl');

yyaxis right;
plot(time2, data2);
ylabel('Lautstärke');
